<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.neofect.app.system_properties_getter.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextFilter"
            android:layout_alignBottom="@+id/editTextProperties"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:singleLine="true"
            android:hint="Filter text"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextBuildData"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/background_dark"
            android:textColor="@android:color/primary_text_dark"
            android:padding="5dp"
            android:textSize="13sp"
            android:textIsSelectable="true"
            android:typeface="monospace"
            android:gravity="bottom"
            android:layout_marginBottom="3dp"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextProperties"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/background_dark"
            android:textColor="@android:color/primary_text_dark"
            android:padding="5dp"
            android:textSize="13sp"
            android:textIsSelectable="true"
            android:typeface="monospace"
            android:gravity="bottom"/>
    </LinearLayout>

</RelativeLayout>
